{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "categories": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "advertiser",
              "notificationText",
              "notificationURL",
              "uuid"
            ],
            "properties": {
              "creativeSetId": {
                "type": "string"
              },
              "campaignId": {
                "type": "string"
              },
              "startTimestamp": {
                "type": "string"
              },
              "endTimestamp": {
                "type": "string"
              },
              "dailyCap": {
                "type": "number"
              },
              "advertiserId": {
                "type": "string"
              },
              "perDay": {
                "type": "number"
              },
              "totalMax": {
                "type": "number"
              },
              "regions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "advertiser": {
                "type": "string"
              },
              "notificationText": {
                "type": "string"
              },
              "notificationURL": {
                "type": "string"
              },
              "uuid": {
                "type": "string"
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "conversions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "creativeSetId",
          "urlPattern",
          "type",
          "observationWindow"
        ],
        "properties": {
          "creativeSetId": {
            "type": "string"
          },
          "urlPattern": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "observationWindow": {
            "type": "number"
          }
        }
      }
    }
  },
  "required": [
    "categories"
  ],
  "additionalProperties": false
}
